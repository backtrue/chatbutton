{% comment %}
  ToldYou Button â€“ Shopify App Embed Block
  This block injects the hosted ToldYou Button widget onto storefront pages using a Config ID
  provided by the main ToldYou Button web app.
{% endcomment %}

{% comment %}theme-check-disable RemoteAsset{% endcomment %}

{% assign config_id = block.settings.config_id | strip %}
{% assign widget_base_url = 'https://button.toldyou.co' %}
{% assign widget_version = '1.0.0' %}

{% if config_id != '' %}
  <script
    src="{{ widget_base_url }}/widget.js?v={{ widget_version }}"
    data-config-id="{{ config_id }}"
    defer
  ></script>
{% endif %}

{% schema %}
{
  "name": "ToldYou Button",
  "target": "body",
  "settings": [
    {
      "type": "text",
      "id": "config_id",
      "label": "ToldYou Button Config ID",
      "info": "Paste the Config ID from the ToldYou Button generator or email to enable the widget on every storefront page."
    }
  ]
}
{% endschema %}
